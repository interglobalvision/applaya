  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

// FORMS

.field
  margin-bottom: $margin-basic

form
  section
    margin-bottom: $margin-basic

label
  display: block
  padding-left: $margin-small
  margin-bottom: $margin-tiny

input
  width: 100%
  max-width: 600px
  font-size: 1rem
  padding: $margin-small
  &[type=checkbox]
    display: inline-block
    width: auto
  &[type=submit]
    width: auto
    -webkit-appearance: button

select
  width: 100%
  max-width: 600px + ($margin-small * 2)
  font-size: 1rem
  border-radius: 0
  height: 2.5rem

.buttons
  a
    display: block
    margin-bottom: $margin-tiny

button[type=submit]
  display: block
  font-size: 1rem
  padding: $margin-small
  margin-bottom: $margin-tiny

// ******************************************************

// MAIN LAYOUT

.container
  width: 80%
  max-width: 1400px
  min-width: 360px
  margin-left: auto
  margin-right: auto

// ******************************************************

// HEADER

#header
  h1
    font-size: 1rem

#main-menu
  li
    margin-left: $margin-tiny

